            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        }
    },
    "Application": {
        "ServiceName": "Sample.FinancialMarket.Api"
    },
    "ConnectionStrings": {
        "SqlServerConnection": "Server=localhost,1433;Database=Foundry_Sample_CRUD;User Id=sa;Password=your_Strong(!)Password;TrustServerCertificate=True",
